@CHARSET "UTF-8";

* {
	margin: 0;
	padding: 0;
}

body {
	width: 100%;
	height: 100%;
	min-width: 1000px;
}

.login_bgdiv {
	position: absolute;
	width: 1000px;
	left: 50%;
	margin: 0 -500px;
	z-index: 100;

}

.login_Logo img {
	height: 80px;
}

.bg{
	height: 400px;
}

.login_context {
	position: absolute;
	z-index: 105;
	width: 380px;
	height: 388px;
	left: 50%;
	  margin-top: 6px;
}

.login_con_bg {
	width: 100%;
	height: 100%;
	filter: alpha(opacity =90);
	z-index: 101;
	-moz-opacity: 0.9;
	-khtml-opacity: 0.9;
	opacity: 0.9;
	background: #fff;
	position: absolute;
}

.login_con {
	width: 100%;
	position: absolute;
	z-index: 102;
}

.table {
	font-size: 12px;
}

.table table tr td {
	padding: 5px 3px;
}

.login_text {
	font-size: 26px;
	font-weight: bold;
}

.login table input {
	margin: 0;
}

.login_tb {
	margin: 0 auto;
}

.login_tb input {
	margin: 0 auto;
}

.login_tb tr {
	height: 40px;
}

.btn{
	height:37px;
	
}